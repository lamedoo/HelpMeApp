<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/top_helper_item_root"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:paddingTop="20dp"
    android:paddingBottom="20dp"
    android:background="@drawable/best_helper_item_background"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/iv_top_helper_avatar"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/user_profile_placeholder"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_top_helper_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textColor="@color/black"
        android:textSize="15sp"
        android:textStyle="bold"
        tools:text="Helper Name"
        app:layout_constraintTop_toBottomOf="@id/iv_top_helper_avatar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/tv_top_helper_rating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:minWidth="70dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:paddingStart="13dp"
        android:paddingEnd="13dp"
        android:text="5"
        android:textColor="#b09e00"
        android:textStyle="bold"
        android:textSize="15sp"
        android:background="@drawable/helpers_item_rating_background"
        android:gravity="center_vertical"
        app:layout_constraintTop_toBottomOf="@id/tv_top_helper_name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:drawableLeftCompat="@drawable/helper_rating_icon"
        app:drawableTint="#b09e00"
        android:drawablePadding="5dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>