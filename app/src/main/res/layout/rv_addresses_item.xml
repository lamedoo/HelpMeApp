<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/best_helpers_background"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/addresses_item_root"
    android:padding="10dp"
    android:layout_margin="8dp">

    <ImageView
        android:id="@+id/iv_user_address"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/home_icon"
        app:tint="@color/teal_700"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
        android:id="@+id/tv_user_address_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:text="Address Name"
        android:textColor="?colorOnPrimary"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/iv_user_address"
        app:layout_constraintEnd_toStartOf="@id/iv_user_address_delete"/>

    <TextView
        android:id="@+id/tv_user_address_details"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:text="Address Details"
        app:layout_constraintTop_toBottomOf="@id/tv_user_address_title"
        app:layout_constraintStart_toEndOf="@id/iv_user_address"
        app:layout_constraintEnd_toStartOf="@id/iv_user_address_delete"/>


    <ImageView
        android:id="@+id/iv_user_address_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/delete_icon"
        app:tint="#C62828"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>