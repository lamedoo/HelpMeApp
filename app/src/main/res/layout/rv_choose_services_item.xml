<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    xmlns:tools="http://schemas.android.com/tools"
    tools:padding="20dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <TextView
        android:id="@+id/service_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="სამზარეულო"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/service_minus"
        android:layout_width="wrap_content"
        android:layout_height="27sp"
        android:layout_marginEnd="5dp"
        android:src="@drawable/minus_icon"
        app:layout_constraintEnd_toStartOf="@id/service_counter"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/service_counter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="5dp"
        android:text="0"
        android:textSize="20sp"
        app:layout_constraintEnd_toStartOf="@id/service_plus"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/service_plus"
        android:layout_width="wrap_content"
        android:layout_height="27dp"
        android:src="@drawable/plus_icon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/user_profile_item_divider_1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:background="?android:attr/listDivider"
        app:layout_constraintTop_toBottomOf="@id/service_title"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>