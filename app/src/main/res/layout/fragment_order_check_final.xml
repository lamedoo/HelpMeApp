<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="20dp"
    tools:background="?colorPrimary"
    tools:context=".ui.orderhelper.ordercheck.OrderCheckFinalFragment">

    <TextView
        android:id="@+id/tv_check_details_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="გადაამოწმეთ შეკვეთის დეტალები"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:padding="20dp"
        android:background="@drawable/best_helpers_background"
        app:layout_constraintTop_toBottomOf="@id/tv_check_details_title">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/calendar_icon"
            app:tint="@color/teal_700"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/tv_check_final_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="18/03/2020"
            android:textSize="18sp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <View
            android:id="@+id/check_final_divider_1"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="15dp"
            android:background="?android:attr/listDivider"
            app:layout_constraintTop_toBottomOf="@id/tv_check_final_date" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:src="@drawable/home_icon"
            app:tint="@color/teal_700"
            app:layout_constraintTop_toBottomOf="@+id/check_final_divider_1"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/tv_check_final_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            tools:text="Irakli Abashidze 50"
            android:textSize="18sp"
            app:layout_constraintTop_toBottomOf="@id/check_final_divider_1"
            app:layout_constraintEnd_toEndOf="parent"/>

        <View
            android:id="@+id/check_final_divider_2"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="15dp"
            android:background="?android:attr/listDivider"
            app:layout_constraintTop_toBottomOf="@id/tv_check_final_address" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:src="@drawable/helper_icon"
            app:tint="@color/teal_700"
            app:layout_constraintTop_toBottomOf="@+id/check_final_divider_2"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/tv_check_final_helper"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            tools:text="Brad Harley"
            android:textSize="18sp"
            app:layout_constraintTop_toBottomOf="@id/check_final_divider_2"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/services_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="სერვისები:"
            app:layout_constraintTop_toBottomOf="@id/tv_check_final_helper"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="სამზარეულო"
            android:textColor="?colorOnPrimary"
            android:textSize="18sp"
            app:layout_constraintTop_toBottomOf="@id/services_title"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/tv_check_final_kitchen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:textColor="?colorOnPrimary"
            android:textSize="18sp"
            tools:text="0"
            app:layout_constraintTop_toBottomOf="@id/services_title"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="მისაღები"
            android:textColor="?colorOnPrimary"
            android:textSize="18sp"
            app:layout_constraintTop_toBottomOf="@id/tv_check_final_kitchen"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/tv_check_final_living"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textColor="?colorOnPrimary"
            android:textSize="18sp"
            tools:text="0"
            app:layout_constraintTop_toBottomOf="@id/tv_check_final_kitchen"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="სტუდიო"
            android:textColor="?colorOnPrimary"
            android:textSize="18sp"
            app:layout_constraintTop_toBottomOf="@id/tv_check_final_living"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/tv_check_final_studio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textColor="?colorOnPrimary"
            android:textSize="18sp"
            tools:text="0"
            app:layout_constraintTop_toBottomOf="@id/tv_check_final_living"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="საძინებელი"
            android:textColor="?colorOnPrimary"
            android:textSize="18sp"
            app:layout_constraintTop_toBottomOf="@id/tv_check_final_studio"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/tv_check_final_bedroom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textColor="?colorOnPrimary"
            android:textSize="18sp"
            tools:text="0"
            app:layout_constraintTop_toBottomOf="@id/tv_check_final_studio"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="სააბაზანო"
            android:textColor="?colorOnPrimary"
            android:textSize="18sp"
            app:layout_constraintTop_toBottomOf="@id/tv_check_final_bedroom"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/tv_check_final_bathroom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textColor="?colorOnPrimary"
            android:textSize="18sp"
            tools:text="0"
            app:layout_constraintTop_toBottomOf="@id/tv_check_final_bedroom"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="ოფისი"
            android:textColor="?colorOnPrimary"
            android:textSize="18sp"
            app:layout_constraintTop_toBottomOf="@id/tv_check_final_bathroom"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/tv_check_final_office"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textColor="?colorOnPrimary"
            android:textSize="18sp"
            tools:text="0"
            app:layout_constraintTop_toBottomOf="@id/tv_check_final_bathroom"
            app:layout_constraintEnd_toEndOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.ncorti.slidetoact.SlideToActView
        android:id="@+id/check_final_confirm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:text="შემდეგი ნაბიჯი"
        app:inner_color="@color/white"
        app:outer_color="@color/teal_700"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>