<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bottom_fragment_sheet_background"
    android:paddingBottom="15dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/choose_cleaning_options_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="აირჩიეთ სერვისი"
        android:layout_marginTop="15dp"
        android:textSize="17sp"
        android:fontFamily="@font/georgian_uppercase"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <View
        android:id="@+id/choose_cleaning_options_title_divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@id/choose_cleaning_options_title"/>

    <ImageView
        android:id="@+id/iv_choose_cleaning_renovation"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:paddingLeft="20dp"
        android:paddingTop="20dp"
        android:src="@drawable/renovation_icon"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/choose_cleaning_options_title_divider" />

    <TextView
        android:id="@+id/tv_choose_cleaning_renovation"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:text="რემონტის შემდგომი დალაგება"
        android:textSize="20sp"
        android:textColor="?colorOnPrimary"
        app:layout_constraintTop_toBottomOf="@id/choose_cleaning_options_title_divider"
        app:layout_constraintStart_toEndOf="@id/iv_choose_cleaning_renovation"
        app:layout_constraintEnd_toEndOf="parent"/>

    <View
        android:id="@+id/choose_cleaning_options_divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#5EA8A7A7"
        app:layout_constraintTop_toBottomOf="@id/tv_choose_cleaning_renovation"/>

    <ImageView
        android:id="@+id/iv_choose_cleaning_standard"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:paddingLeft="20dp"
        android:paddingTop="20dp"
        android:src="@drawable/main_frag_cleaning"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/choose_cleaning_options_divider"/>

    <TextView
        android:id="@+id/tv_choose_cleaning_standard"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:text="სტანდარტული დალაგება"
        android:textColor="?colorOnPrimary"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/iv_choose_cleaning_standard"
        app:layout_constraintTop_toBottomOf="@id/choose_cleaning_options_divider" />

</androidx.constraintlayout.widget.ConstraintLayout>