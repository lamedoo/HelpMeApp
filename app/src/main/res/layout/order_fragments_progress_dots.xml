<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/progress_dot_1"
        android:contentDescription="dot"
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:background="@drawable/order_progress_dot"
        app:layout_constraintEnd_toStartOf="@+id/progress_dot_2"
        app:layout_constraintHorizontal_bias="0.5"
        android:layout_marginRight="5dp"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/progress_dot_2"
        android:contentDescription="dot"
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:layout_marginRight="5dp"
        android:background="@drawable/order_progress_dot"
        app:layout_constraintEnd_toStartOf="@id/progress_dot_3"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/progress_dot_1"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/progress_dot_3"
        android:contentDescription="dot"
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:background="@drawable/order_progress_dot"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/progress_dot_2"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>